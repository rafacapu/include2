<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjetoPrismMVVM.Views.MainPage"
             Title="Consultar CEP">

    <StackLayout BackgroundColor="#FFBF00" Padding="30" Spacing="30">
        <Image Source="LogoCorreios.png" x:Name="LOGO"/>
        <Entry Placeholder="Digite o CEP" PlaceholderColor="#FFBF00" BackgroundColor="#FFFFFF" x:Name="CEP"/>
        <Button
            Text= "Buscar CEP"
            Command = "{Binding ClickNavigationCommand}" />
        
        <Label Text="" x:Name="RESULTADO econtrado"
           HorizontalOptions="Center"
           VerticalOptions="CenterAndExpand" />
    </StackLayout>
    

</ContentPage>